<h1>Listing hostnames</h1>

<table>
  <tr>
    <th>Domain name</th>
    <th>Nicks on domain</th>
    <th></th>
  </tr>

<% @hostnames.each do |hostname| %>
  <tr>
    <td><%= hostname.domain_name %></td>
    <td><% hostname.nicks.each do |n|%><%= link_to n.name, nick_path(n) %> <% end %>
    <td><%= link_to 'Show', hostname %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Hostname', new_hostname_path %>
