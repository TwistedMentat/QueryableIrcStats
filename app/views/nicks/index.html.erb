<h1>Listing nicks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Hostnames</th>
    <th>Username</th>
    <th></th>
  </tr>

<% @nicks.each do |nick| %>
  <tr>
    <td><%= nick.name %></td>
    <td><% nick.hostnames.each do |h|%><%= link_to h.domain_name, hostname_path(h) %> <% end %>
    <td><%= nick.username %></td>
    <td><%= link_to 'Show', nick %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Nick', new_nick_path %>
